{
  "appId": "com.misteo.assistant-arknights",
  "productName": "MeoAssistantArknights",
  "artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
  "asar": true,
  "asarUnpack": "**\\*.{node,dll}",
  "directories": {
    "output": "release/${version}"
  },
  "electronDownload": {
    "mirror": "https://npm.taobao.org/mirrors/electron/"
  },
  "files": [
    "dist"
  ],
  "mac": {
    "target": "zip"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "linux": {
    "target": [
      "zip"
    ],
    "category": "Tools"
  }
}
